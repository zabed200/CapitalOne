<AnchorPane prefHeight="600.0" prefWidth="450.0" stylesheets="@../design/design.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="forgot_pass.ForgotPasswordController">
   <children>
      <FontAwesomeIconView glyphName="ARROW_LEFT" layoutX="54.0" layoutY="62.0" onMouseClicked="#backToLogin" size="20" text="" />
      <FontAwesomeIconView glyphName="CLOSE" layoutX="390.0" layoutY="62.0" onMouseClicked="#closeApp" size="20" text="" />
      <Label layoutX="71.0" layoutY="97.0" text="Password Recovery">
         <font>
            <Font name="Candara Light" size="35.0" />
