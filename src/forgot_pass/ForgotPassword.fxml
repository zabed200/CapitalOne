      <TextField fx:id="accountno" layoutX="55.0" layoutY="268.0" prefHeight="38.0" prefWidth="340.0" promptText="Account No." styleClass="field-decoration" />
      <ComboBox fx:id="questions" layoutX="55.0" layoutY="323.0" prefHeight="38.0" prefWidth="340.0" promptText="Security Questions" styleClass="field-decoration" />
      <TextField fx:id="answer" layoutX="55.0" layoutY="374.0" prefHeight="38.0" prefWidth="340.0" promptText="Answer" styleClass="field-decoration" />
      <Button layoutX="115.0" layoutY="505.0" mnemonicParsing="false" onMouseClicked="#resetPassword" prefHeight="35.0" prefWidth="200.0" styleClass="login-button" text="Recover Password">
